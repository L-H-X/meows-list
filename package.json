{
  "name": "meows-list",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "prettier": "prettier --write 'src/**/*.{ts,html,js,css,json,vue}'",
    "lint": "yarn run lint:eslint && yarn run lint:stylelint",
    "lint:eslint": "eslint --fix --ext .vue,.js,.jsx,.ts,.tsx ./src",
    "lint:stylelint": "stylelint 'src/**/*.{vue,scss,css}' --fix"
  },
  "dependencies": {
    "@types/node": "^18.6.3",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-vue": "^3.0.0",
    "element-plus": "^2.2.12",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^9.2.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "localforage": "^1.10.0",
    "pinia": "^2.0.17",
    "pinia-plugin-persistedstate": "^2.1.0",
    "postcss": "^8.4.14",
    "postcss-html": "^1.5.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "unplugin-auto-import": "^0.10.3",
    "unplugin-vue-components": "^0.21.2",
    "vite": "^3.0.4",
    "vue": "^3.2.37",
    "vue-eslint-parser": "^9.0.3",
    "vue-router": "4",
    "vue-tsc": "^0.39.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,vue,css,scss}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "*.{js,ts,vue}": [
      "prettier --write",
      "eslint --fix",
      "git add -A"
    ]
  }
}
